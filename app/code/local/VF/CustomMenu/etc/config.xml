<config>
    <modules>
        <VF_CustomMenu>
            <version>0.4.6</version>
        </VF_CustomMenu>
    </modules>
    <global>
        <blocks>
            <menu>
                <class>VF_CustomMenu_Block</class>
            </menu>
        </blocks>
        <models>
            <menu>
                <class>VF_CustomMenu_Model</class>
                <resourceModel>menu_resource</resourceModel>
            </menu>
            <menu_resource>
                <class>VF_CustomMenu_Model_Resource</class>
                <entities>
                    <menu>
                        <table>vf_custom_menu</table>
                    </menu>
                </entities>
            </menu_resource>
        </models>
        <resources>
            <vf_custommenu_setup>
                <setup>
                    <module>VF_CustomMenu</module>
                    <connection>core_setup</connection>
                </setup>
            </vf_custommenu_setup>
        </resources>
        <helpers>
            <menu>
                <class>VF_CustomMenu_Helper</class>
            </menu>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <custom_menu before="Mage_Adminhtml">VF_CustomMenu_Adminhtml</custom_menu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <menu>
                    <file>menu.xml</file>
                </menu>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <vf_menu>
                    <file>vf_menu.xml</file>
                </vf_menu>
            </updates>
        </layout>
    </frontend>
</config>

