<config>
	<menu>
        <custom_modules>
            <title>Custom Modules</title>
            <sort_order>75</sort_order>
            <children>
                <custom_menu>
                    <title>Custom Menu</title>
                    <sort_order>100</sort_order>
                    <action>adminhtml/menu/</action>
                </custom_menu>
            </children>
        </custom_modules>
	</menu>
	<acl>
		<resources>
			<admin>
				<children>
					<custom_menu translate="title" module="menu">
                        <title>Configure Custom Menu</title>
                        <sort_order>100</sort_order>
					</custom_menu>
				</children>
			</admin>
		</resources>
	</acl>
</config>